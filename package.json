{
    "name": "vue3-json-schema-form",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build:github.io": "rimraf dist && TYPE=github.io  vue-cli-service build",
        "build:core": "TYPE=lib vue-cli-service build --target lib --name index --no-clean lib/index.ts",
        "build:theme": "TYPE=lib vue-cli-service build --target lib --name theme-default/index --no-clean lib/theme-default/index.tsx",
        "build": "rimraf dist && npm run build:core && npm run build:theme",
        "test:unit": "vue-cli-service test:unit",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "ajv": "^7.0.1",
        "ajv-errors": "^2.0.0",
        "ajv-formats": "^1.5.1",
        "ajv-i18n": "^3.6.0",
        "core-js": "^3.6.5",
        "json-schema-merge-allof": "^0.8.1",
        "jsonpointer": "^4.1.0",
        "jss": "^10.5.1",
        "jss-preset-default": "^10.5.1",
        "lodash.topath": "^4.5.2",
        "lodash.union": "^4.6.0",
        "vue": "^3.0.5",
        "vue-jss": "^0.0.4"
    },
    "devDependencies": {
        "@types/jest": "^24.0.19",
        "@types/json-schema-merge-allof": "^0.6.0",
        "@types/lodash.topath": "^4.5.6",
        "@types/lodash.union": "^4.6.6",
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "@vue/babel-plugin-jsx": "^1.0.3",
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-plugin-typescript": "~4.5.0",
        "@vue/cli-plugin-unit-jest": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/compiler-sfc": "^3.0.0",
        "@vue/eslint-config-prettier": "^6.0.0",
        "@vue/eslint-config-typescript": "^5.0.2",
        "@vue/test-utils": "^2.0.0-0",
        "circular-dependency-plugin": "^5.2.2",
        "eslint": "^6.7.2",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-vue": "^7.0.0-0",
        "lint-staged": "^9.5.0",
        "monaco-editor": "^0.22.3",
        "monaco-editor-webpack-plugin": "^3.0.0",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "typescript": "~3.9.3",
        "vue-jest": "^5.0.0-0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "jest": {
        "preset": "@vue/cli-plugin-unit-jest/presets/typescript-and-babel",
        "transform": {
            "^.+\\.vue$": "vue-jest"
        }
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,jsx,vue,ts,tsx}": [
            "vue-cli-service lint",
            "git add"
        ]
    }
}
